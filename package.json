{
  "name": "vue3-mobile-h5",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite --host",
    "dev:mock": "cross-env VITE_ENABLE_MOCK=true vite --host",
    "build": "run-s build:prod",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:analyze": "vite build --mode production && npx vite-bundle-analyzer dist/stats.html",
    "preview": "vite preview --host",
    "serve": "vite preview --host --port 4173",
    "clean": "rimraf dist node_modules/.vite",
    "reinstall": "rimraf node_modules package-lock.json && npm install",
    "test:unit": "vitest",
    "test:unit:run": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "prepare": "husky",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "lint:check": "eslint . && oxlint .",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "deps:check": "npm-check-updates",
    "deps:update": "npm-check-updates -u && npm install",
    "analyze": "node build/analyze.js",
    "deploy": "node build/deploy.js",
    "deploy:git": "node build/deploy.js git",
    "deploy:ftp": "node build/deploy.js ftp",
    "deploy:oss": "node build/deploy.js oss",
    "health-check": "node scripts/health-check.js",
    "optimize": "node scripts/optimize.js",
    "release": "run-s lint:check test:unit:run build:prod health-check"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "lib-flexible": "^0.3.2",
    "pinia": "^3.0.3",
    "vant": "^4.9.21",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,less,html,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@prettier/plugin-oxc": "^0.0.4",
    "@vant/auto-import-resolver": "^1.2.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/test-utils": "^2.4.6",
    "cross-env": "^7.0.3",
    "cypress": "^14.5.3",
    "eslint": "^9.31.0",
    "eslint-plugin-cypress": "^5.1.0",
    "eslint-plugin-oxlint": "~1.8.0",
    "eslint-plugin-vue": "~10.3.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.11",
    "npm-check-updates": "^17.1.9",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.8.0",
    "postcss-pxtorem": "^6.1.0",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "sass": "^1.90.0",
    "start-server-and-test": "^2.0.12",
    "unplugin-vue-components": "^0.28.0",
    "vite": "^7.1.1",
    "vite-bundle-analyzer": "^0.12.1",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4"
  }
}